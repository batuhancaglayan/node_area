{
  "version": "0.2.0",
  "configurations":[
    {
      "type": "node",
      "request": "launch",
      "name": "Start Program",
      "program": "${workspaceFolder}/build/bundle.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Program",
      "runtimeExecutable": "npm",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      //"preLaunchTask": "echotest",
      "runtimeArgs": [
        "run-script",
        "start"
      ],
      "port": 9229,
      "outFiles": [
        "${workspaceFolder}/**/*.js"
    ],
    }
   ]
}